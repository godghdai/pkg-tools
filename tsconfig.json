{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "importHelpers": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
          "*": [
              "node_modules/*",
              "types/*"
          ]
      }
    },
    "include": [
        "src/**/*"
    ]
}
